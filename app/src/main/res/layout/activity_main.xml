<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="demo.fanzhong.com.myservices1.MainActivity">

    <Button
        android:text="stop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="18dp"
        android:layout_marginStart="18dp"
        android:id="@+id/stop_service"
        android:layout_alignBaseline="@+id/start_service"
        android:layout_alignBottom="@+id/start_service"
        android:layout_toRightOf="@+id/start_service"
        android:layout_toEndOf="@+id/start_service" />

    <Button
        android:text="start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/start_service"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:text="bINDER"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/start_service"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="75dp"
        android:id="@+id/start_binder" />

    <Button
        android:text="UNBINDER"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/stop_binder"
        android:layout_alignBaseline="@+id/start_binder"
        android:layout_alignBottom="@+id/start_binder"
        android:layout_alignLeft="@+id/stop_service"
        android:layout_alignStart="@+id/stop_service" />
</RelativeLayout>
